        <div class="thumbnail">
           <img src="<%= camp.image %>">
     <div class="caption">
          <h4> <%= camp.name %> </h4>
     </div>   
    </div>
    <a href="/campground/<%=camp._id%>" class="btn btn-success">read more</a>  
</div>
<%  }); %>
</div>

